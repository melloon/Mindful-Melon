{
    "name": "Mindful Melon",
    "description": "A productivity extension. A GeauxHack 2025 project",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "MainMenu.html",
        "default_icon": "Images/HappyMelon.png"
    },
    "icons": {
        "16": "Images/HappyMelon.png",
        "48": "Images/HappyMelon.png",
        "128": "Images/Mindful Melon.png"
    },
    "permissions": [
        "notifications",
        "storage",
        "offscreen",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "backgrounds.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "music/*.mp3"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}